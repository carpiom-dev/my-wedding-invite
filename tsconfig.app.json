{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "baseUrl": "src",
    "paths": {
      "@domain/*": ["app/domain/*"],
      "@application/*": ["app/application/*"],
      "@infrastructure/*": ["app/infrastructure/*"],
      "@presentation/*": ["app/presentation/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
